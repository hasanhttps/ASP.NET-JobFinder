                            </select>
                        </div>
                        <div class="col-lg-3 col-md-6 col-xs-12 pb-2">

                            <select id='seluser' asp-for="Education">
                                <option value='0'>Təhsil</option>
                                <option value='Yogesh'>Yogesh</option>
                                <option value='Sonarika'>Sonarika</option>
                                <option value='Vishal'>Vishal</option>
                                <option value='Vijay'>Vijay</option>
                                <option value='Ravi'>Ravi</option>
                                <option value='Anil'>Anil</option>
                            </select>
                        </div>
                        <div class="col-lg-4 col-md-6 col-xs-12 pb-2">

                            <input type="text" id="tag-input1">
                        </div>
                        <!-- <div class="col-12 pb-2">
                            <textarea name="more" class="summernote">Hello Summernote</textarea>

                        </div> -->
                        <div class="col-lg-4 col-md-6 col-xs-12 pb-2">
