        <div class="container mb-5">
            <div class="forborders">
                <div class="container">
                    <div class="row">
                        <h4 class="pb-2 pl-2">Vakansiyanın Detalları</h4>
                        <div class="col-12">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Başlıq" asp-for="Name" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-xs-12 pb-2">

                            <select id='seluser' asp-for="StateType">
                                <option value='0'>Ştat Növü</option>
                                <option value='Yogesh'>Yogesh</option>
                                <option value='Sonarika'>Sonarika</option>
                                <option value='Vishal'>Vishal</option>
                                <option value='Vijay'>Vijay</option>
                                <option value='Ravi'>Ravi</option>
                                <option value='Anil'>Anil</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-6 col-xs-12 pb-2">

                            <select id='seluser' asp-for="Schedule">
                                <option value='0'>İş Cədvəli</option>
                                <option value='Yogesh'>Yogesh</option>
                                <option value='Sonarika'>Sonarika</option>
                                <option value='Vishal'>Vishal</option>
                                <option value='Vijay'>Vijay</option>
                                <option value='Ravi'>Ravi</option>
                                <option value='Anil'>Anil</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-6 col-xs-12 pb-2">

                            <select id='seluser' asp-for="EntryProcess">
                                <option value='0'>Standart Qəbul Prosesi</option>
                                <option value='Yogesh'>Yogesh</option>
                                <option value='Sonarika'>Sonarika</option>
                                <option value='Vishal'>Vishal</option>
                                <option value='Vijay'>Vijay</option>
                                <option value='Ravi'>Ravi</option>
                                <option value='Anil'>Anil</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-6 col-xs-12 pb-2">

                            <select id='seluser' asp-for="CategoryId">
                                <option value='0'>Kateqoriyalar</option>
                                @foreach(var category in Model.Categories){
                                    <option value=@category.Id>@category.CategoryName</option>
                                }
                            </select>
                        </div>
                        <div class="col-12 pb-2">
                            <input type="text" name="more" class="summernote" asp-for="Desc">@Model.Desc</input>

                        </div>
                        <div class="col-lg-4 col-md-6 col-xs-12 pb-2">
                            <div class="input-group mb-3">
                                <input type="text" asp-for="VacantionCode" class="form-control" placeholder="Vakansiya Kodu" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-6 col-xs-12 pb-2">
                            <div class="input-group mb-3">
                                <input type="text" asp-for="VacantionUrl" class="form-control" placeholder="Vakansiyanın URL linki" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-6 col-xs-12 pb-2">

                            <select id='seluser' asp-for="ProfileDemand">
                                <option value='0'>Ərizəçinin Profil Tələbləri</option>
                                <option value='Yogesh'>Yogesh</option>
                                <option value='Sonarika'>Sonarika</option>
                                <option value='Vishal'>Vishal</option>
                                <option value='Vijay'>Vijay</option>
                                <option value='Ravi'>Ravi</option>
                                <option value='Anil'>Anil</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-6 col-xs-12 pb-2">
                            <div class="input-group mb-3">
                                <input type="date" class="form-control" placeholder="Vakansiyanın URL linki" aria-label="Username" asp-for="ExpireDateTime" aria-describedby="basic-addon1">
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

        <div class="container mb-5">
            <div class="forborders">
                <div class="container">
                    <div class="row">
