                                <div class="input-group-append">
                                    <span class="input-group-text">AZN</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 col-xs-12 pb-2">
                            <div class="input-group">
                                <input type="text" class="form-control den" aria-label="Amount (to the nearest dollar)" asp-for="MaxSalary" placeholder="Maksimum Əmək Haqqı">
                                <div class="input-group-append">
                                    <span class="input-group-text">AZN</span>
                                </div>
                            </div>
                        </div>
